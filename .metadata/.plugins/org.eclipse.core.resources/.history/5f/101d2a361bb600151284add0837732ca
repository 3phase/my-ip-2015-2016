$(document).ready(function() {
	"use strict";
	
	var ENDPOINT = "http://localhost:3000/pois";
	
	function append(val) {
		return ENDPOINT + "?name=" + val;
	}
	
	function getSingleTask(val) {
		return $.ajax(ENDPOINT + "?name=" + val, {
			method: "GET",
			dataType: "json"
		}).then(function(response){
			var table = $("#result");
			$.each(response, function(i, data) {
				table.append("<tr id=\"result\"><td>Type</td><td>" + data.type +"</td></tr>");
				table.append("<tr id=\"result\"><td>Name</td><td>" + data.name + "</td></tr>");
			});
		});
	}
	
	$("#search").on("click", function() {
		var fieldVal = $("#filter").val();
		getSingleTask(fieldVal);
	});
	
});