package org.elsysbg.ip.socket_project;

import java.util.HashMap;
import java.util.Map;

public class Register {

	private static Map<String, Integer> loggedUsers = new HashMap<>();
	
	public Register() {
		// TODO Auto-generated constructor stub
	}
	
	public void attends(String username) {
		Integer attendance_count = null;
		try {
			attendance_count = loggedUsers.get(username);
		} catch (Exception e) {
			System.out.println("Log with this username is unavilable");
		}
		attendance_count += 1;
	}
	
	public int get_attendance(String username) throws Exception {
		try {
			return loggedUsers.get(username);
		} catch(Exception e) {
			System.out.println("Log with this username is unavilable");
			return -1;
		}
	}
	
	public static void main(String[] args) {
		for (Integer i = 0; i <= 10; i++) {
			try {
				i+=1;
				if (i == 7) {
					throw Exception(); 
				}
			} catch(Exception e) {
				
			}
		}
	}
	
}
